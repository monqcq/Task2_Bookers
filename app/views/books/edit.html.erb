<h2>Editing Book</h2>
  <!--以下編集フォーム-->
  <%= form_with model:@book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Update Book' %>
  <% end %>
<p><%= link_to "Show", book_path(params[:id]) %> | <%= link_to "Back", '/books' %></p>